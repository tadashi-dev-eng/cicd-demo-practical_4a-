# Snyk configuration file for the cicd-demo project
# This file configures Snyk security scanning behavior

version: v1.0.0

# Ignore specific vulnerabilities (use sparingly and with expiration dates)
ignore:
  # Example: Ignore a specific vulnerability with justification
  # 'SNYK-JAVA-ORGAPACHECOMMONS-1234567':
  #   - '*':
  #       reason: 'False positive - not exploitable in our Spring Boot context'
  #       expires: '2025-12-31T23:59:59.999Z'

# Patch configuration (currently empty for Maven projects)
patches: {}

# Language-specific settings
language-settings:
  java:
    # Include dev dependencies in scanning (default: true)
    include-dev-deps: false
    
    # Maven-specific options
    maven-aggregate-project: true

# Project-specific settings
exclude:
  # Exclude build artifacts and logs from scanning
  - 'target/**'
  - '**/*.class'
  - 'logs/**'
  - '.mvn/**'
  - 'mvnw*'

# Snyk Code specific settings (for SAST scanning)
code:
  # Exclude specific files or patterns from code analysis
  exclude:
    - 'src/test/**'
    - '**/*.properties'
    - '**/target/**'
    - '.github/**'
